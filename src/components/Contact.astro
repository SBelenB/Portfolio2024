---
import ContactIcon from "../components/icons/Contact.astro";
---

<div class="mx-auto max-w-screen-sm">
    <h2
        class="mb-4 text-3xl font-semibold text-center opacity-90 flex gap-x-3 justify-center items-center">
        <ContactIcon class="size-7" />
        Contact
    </h2>

    <p class="mb-8 font-light text-center sm:text-xl opacity-80">
        <span class="text-main-pink font-bold">Get in touch with me</span> â€“ I'd love to hear from you!
    </p>
    
    <!-- Alerts after submitting the message -->
    <div id="successAlert" class="hidden mt-4 mx-auto px-4 py-2 bg-green-500 text-white text-center rounded-md md:w-[300px]">
        Message sent successfully!
    </div>
    <div id="errorAlert" class="hidden mt-4 mx-auto px-4 py-2 bg-red-500 text-white text-center rounded-md md:w-[300px]">
        Message delivery failed. Please try again.
    </div>
    
    <form id="contactForm" class="space-y-4 lg:px-20">
        <div>
            <label for="name" class="block mb-2 text-sm font-medium opacity-80">Name</label>
            <input
                type="text"
                id="name"
                class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
                placeholder="How should I call you"
                autocomplete="name"
                required
            />
        </div>
        <div>
            <label for="email" class="block mb-2 text-sm font-medium opacity-80">Your email</label>
            <input
                type="email"
                name="email"
                id="email"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
                placeholder="name@email.com"
                autocomplete="email"
                required
            />
        </div>
        <div class="sm:col-span-2">
            <label for="message" class="block mb-2 text-sm font-medium opacity-80">Your message</label>
            <textarea
                id="message"
                name="message"
                rows="6"
                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                placeholder="Write your message..."
                required></textarea>
                
        </div>
        <button
            type="submit"
            title="Send message"
            class="text-white bg-gradient-to-r from-cta-purple to-main-purple hover:bg-gradient-to-l focus:ring-1 focus:outline-none focus:ring-purple-200 dark:focus:ring-cta-purple font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 sm:w-fit"
            >Send message</button>
    </form>
</div>